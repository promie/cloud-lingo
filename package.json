{
  "name": "cloud-lingo",
  "scripts": {
    "dev:ui": "npm run dev --workspace=@cl/frontend",
    "ui:build": "npm run build --workspace=@cl/frontend",
    "deploy": "cd infrastructure; npm run deploy",
    "destroy": "cd infrastructure; npm run destroy",
    "build-utils-lambda-layer": "npm run build --workspace=@cl/utils-lambda-layer",
    "watch-utils-lambda-layer": "npm run watch --workspace=@cl/utils-lambda-layer",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
    "prettier:check": "prettier --check \"./**/*.{js,ts,tsx,json}\"",
    "prettier:write": "prettier --write \"./**/*.{js,ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "author": "Promie Yutasane",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "infrastructure",
    "packages/**"
  ],
  "dependencies": {
    "@cl/shared-types": "*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
